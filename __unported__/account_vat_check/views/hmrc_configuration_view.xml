<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mtd_hmrc_vat_configuration_view" model="ir.ui.view">
        <field name="name">HMRC Vat Check Configuration form</field>
        <field name="model">mtd.vat_hmrc_configuration</field>
        <field name="arch" type="xml">
            <form string="HMRC Configuration">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="environment" widget="radio" options="{'horizontal': true}"/>
                        <field name="hmrc_url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
